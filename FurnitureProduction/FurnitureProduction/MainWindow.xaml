<Window x:Class="FurnitureProduction.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Производство мебели" Height="650" Width="1000"
        MinHeight="650" MinWidth="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FF498C51">
            <Image Source="Resources/furniture.jpg"
                   HorizontalAlignment="Left"
                   Margin="130,0,0,0"></Image>
            <TextBlock Text="Производство мебели"
                       FontSize="40"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"></TextBlock>
        </Grid>
        <Frame x:Name="MainFrame" Grid.Row="1"></Frame>
    </Grid>
</Window>
